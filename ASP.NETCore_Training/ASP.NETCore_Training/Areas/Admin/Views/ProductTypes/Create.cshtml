@model ASP.NETCore_Training.Models.ProductTypes
@{
    ViewData["Title"] = "Create";
}

<br />
<h2 class="text-info">Create Product Type</h2>

<form asp-action="Create" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ProductType"></label>
        </div>

        <div class="col-5">
            <input asp-for="ProductType" class="form-control" />
        </div>
        <span class="text-danger" asp-validation-for="ProductType"></span>
    </div>

    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Save"/>
        <a asp-action="Index" class="btn btn-success">Back to list</a>
    </div>
</form>

@section Scripts{ 
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");} 
}