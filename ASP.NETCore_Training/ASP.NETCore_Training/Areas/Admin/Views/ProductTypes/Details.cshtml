@model ASP.NETCore_Training.Models.ProductTypes
@{
    ViewData["Title"] = "Details";
}

<br />
<h2 class="text-info">Product Type Details</h2>

<form asp-action="Details" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="ProductType"></label>
        </div>

        <div class="col-5">
            <input asp-for="ProductType" class="form-control" readonly />
        </div>
        <span class="text-danger" asp-validation-for="ProductType"></span>
    </div>

    <div class="form-group">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Index" class="btn btn-success">Back to list</a>    
    @*<input type="submit" class="btn btn-primary" value="Back to list" />*@
    </div>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");}
}